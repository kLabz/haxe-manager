#!/bin/bash

ROOT=$(dirname $(readlink -f $0))/..
BUILD_OS="linux64"
HAXE="haxe"

if [[ "$OSTYPE" == "msys" ]]; then
	BUILD_OS="windows64"
	HAXE="haxe.exe"
elif [[ "$OSTYPE" == "darwin"* ]]; then
	BUILD_OS="mac"
fi

VERSION="${BUILD_OS}_569e52e"

HAXE_STD_PATH=$ROOT/build/$VERSION/std $ROOT/build/$VERSION/$HAXE --cwd $ROOT run-select.hxml $@
